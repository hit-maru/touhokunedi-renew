---
// src/components/company/SDGs.astro
// アップロードされた webp ファイルに準拠
const sdgsItems = [
  { id: 3, text: "インフルエンザ予防接種補助・AED設置" },
  { id: 4, text: "社内外での教育推奨\nQC活動・技能向上・安全・資格取得講習、技能実習生の育成" },
  { id: 5, text: "働きやすい職場環境の構築\n女性、高齢者の活躍推進" },
  { id: 7, text: "風力発電分野への参入・LED化" },
  { id: 8, text: "処分地受入で雇用創出\n風力・建設・再エネ" },
  { id: 9, text: "社会インフラへの貢献（鉄道軌道・橋梁・鉄塔）" },
  { id: 10, text: "サステナブル調達\nTOHOKU BOLT WAY" },
  { id: 11, text: "地域貢献活動\n清掃・地域行事への参加" },
  { id: 12, text: "持続可能な事業運営の構築（BCP策定）" },
  { id: 13, text: "CO2排出量削減目標2%\n最新設備の導入で省エネ対策(GX)" }
];
---

<section id="sdgs" class="py-24 bg-white border-t border-gray-50">
  <div class="container mx-auto px-6 max-w-5xl">
    
    {/* タイトル：EB Garamond 400 正体 / プロポーショナル */}
    <div class="text-center mb-20">
      <h2 class="font-serif text-3xl md:text-4xl font-normal leading-none mb-4 tracking-normal">
        <span class="text-primary">SUSTAINABLE DEVELOPMENT</span> 
        <span class="text-accent">GOALS</span>
      </h2>
      <h3 class="font-mb101 font-black text-xl text-ink">当社の取り組み</h3>
    </div>

    {/* SDGsタイル：目視45mm(170px)制限とゆったりした「間」を維持 */}
    <div class="grid grid-cols-2 md:grid-cols-5 gap-x-12 gap-y-16 lg:gap-x-16">
      {sdgsItems.map(item => (
        <div class="flex flex-col items-center">
          {/* 画像コンテナ：45mmサイズを死守 */}
          <div class="w-full max-w-[170px] aspect-square shadow-sm overflow-hidden bg-white border border-gray-50">
            <img 
              src={`/images/sdg-${item.id}.webp`} 
              alt={`SDG ${item.id}`} 
              class="w-full h-full object-contain"
              loading="lazy"
            />
          </div>
          
          {/* 説明文：15px以下のため MB101 から Noto Sans JP (font-sans) へ変更 */}
          <div class="mt-5 text-center px-2">
            <p class="font-sans text-[11px] leading-relaxed font-medium text-gray-600 whitespace-pre-wrap">
              {item.text}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>