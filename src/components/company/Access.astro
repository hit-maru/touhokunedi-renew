    color: "#008B9B",
    mapQuery: "福島県いわき市泉町黒須野字砂利59番地"
  },
  { 
    label: "TOKYO", 
    title: "東京本社・東京営業部", 
    zip: "110-0015", 
    addr: "東京都台東区東上野1丁目26-2 オーラムビル4F", 
    tel: "(03)6284-7130", 
    fax: "(03)6284-7131", 
    color: "#1A1A1A",
    mapQuery: "東京都台東区東上野1丁目26-2 オーラムビル"
  },
  { 
    label: "SENDAI", 
    title: "仙台営業部", 
    zip: "983-0043", 
    addr: "宮城県仙台市宮城野区萩野町4-4-35", 
    tel: "(022)284-2675", 
    fax: "(022)284-2655", 
    color: "#455A64",
    mapQuery: "宮城県仙台市宮城野区萩野町4-4-35"
