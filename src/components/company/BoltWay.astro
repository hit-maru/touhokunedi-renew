---
// src/components/company/BoltWay.astro
const wayItems = [
  { id: "01", title: "法令遵守", text: "国内外の法令を遵守し、人権を尊重するとともに高い倫理観を持って行動します。" },
  { id: "02", title: "安全性", text: "安全で有益な商品・サービスを提供し、お客さまの満足と信頼を獲得します。" },
  { id: "03", title: "健全なお取引", text: "公正、透明、自由な競争並びに適正な取引を行い、政治・行政と健全な関係を保ちます。" },
  { id: "04", title: "情報開示", text: "企業情報を積極的かつ公正に開示し、個人情報・顧客情報をはじめとする情報を適正に管理します。" },
  { id: "05", title: "環境保全", text: "環境保護と環境負荷低減を基本とし、エネルギー管理と事故の予防を実施します。" },
  { id: "06", title: "人権尊重", text: "個人の多様性、人格、個性を尊重するとともに、安全で働きやすい環境を確保します。" },
  { id: "07", title: "共助の精神", text: "尊重の精神で接し、声掛けを実践し、共に助け合い会社の発展に寄与します。" },
  { id: "08", title: "反社会的勢力の排除", text: "社会の秩序や安全に脅威を与える反社会的勢力とは、一切の関係を遮断します。" },
  { id: "09", title: "危機管理", text: "テロ、サイバー攻撃、自然災害等に備え、組織的な危機管理を徹底します。" }
];
---

<section id="statement" class="py-10 bg-gray-50">
  <div class="container mx-auto px-6 max-w-5xl">
    
    <div class="text-center mb-16">
      <h2 class="font-serif text-3xl font-normal tracking-normal text-ink mb-2">
        TOHOKU BOLT WAY
      </h2>
      <div class="w-12 h-1 bg-primary mx-auto"></div>
    </div>

    {/* 【理念 & ミッション】 */}
    <div class="max-w-4xl mx-auto mb-20 space-y-16">
      <div class="text-center">
        <p class="text-primary font-serif text-[16px] font-normal tracking-[0.2em] uppercase mb-4">Philosophy</p>
        <h3 class="font-futomin font-normal text-2xl md:text-3xl text-ink tracking-widest flex items-center justify-center gap-4 md:gap-8">
          <span>社会奉仕</span>
          <span class="w-px h-6 bg-gray-300"></span>
          <span>技術向上</span>
          <span class="w-px h-6 bg-gray-300"></span>
          <span>社員の健康</span>
        </h3>
      </div>

      <div class="text-center bg-white p-10 md:p-14 border border-gray-100 shadow-sm">
        <p class="text-primary font-serif text-[16px] font-normal tracking-[0.2em] uppercase mb-4">Mission</p>
        <p class="font-mb101 font-bold text-lg md:text-xl text-ink leading-relaxed max-w-2xl mx-auto">
          国内外で当社の価値を高める。<br />
          顧客に安心、信頼してもらえる締結品メーカーとして<br class="hidden md:block" />
          持続的に成長する。
        </p>
      </div>
    </div>

    {/* 【行動規範・バリュー】 */}
    <div class="text-center mb-10">
      <p class="text-primary font-serif text-[16px] font-normal tracking-[0.2em] uppercase mb-2">Code of Conduct & Values</p>
      <h3 class="font-mb101 font-black text-2xl text-ink">行動規範・バリュー</h3>
    </div>

    <div class="bg-white p-8 md:p-14 shadow-sm border border-gray-100 w-full">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-x-16 gap-y-12">
        {wayItems.map(item => (
          <div class="flex flex-col relative">
            <div class="flex items-baseline gap-3 mb-3 border-b border-gray-100 pb-2">
              {/* EB Garamond 正体 (italicなし) */}
              <span class="text-primary font-serif font-normal text-3xl leading-none tracking-tighter">
                {item.id}
              </span>
              <h4 class="font-mb101 font-black text-[16px] text-ink leading-none">
                {item.title}
              </h4>
            </div>
            <p class="text-[12px] leading-relaxed font-medium text-gray-600">
              {item.text}
            </p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>