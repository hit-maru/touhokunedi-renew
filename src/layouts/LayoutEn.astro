---
// src/layouts/LayoutEn.astro
import HeaderEn from '../components/en/HeaderEn.astro';
import FooterEn from '../components/en/FooterEn.astro';

import '../styles/global.css';

const { title } = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Tohoku Bolt Mfg. Co., Ltd.</title>

    <!-- Google Fonts（JP / EN 共通で使用） -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;500;600;700&family=Cormorant+Garamond:wght@400;500;600;700&family=Noto+Sans+JP:wght@400;700&display=swap"
      rel="stylesheet"
    >

    <style>
      /* ENヘッダー高さ前提のスクロール補正 */
      html { scroll-padding-top: 5rem; }
    </style>
  </head>

  <body class="bg-white text-gray-800 antialiased flex flex-col min-h-screen">
    <HeaderEn />

    <main class="flex-grow">
      <slot />
    </main>

    <FooterEn />

    <!-- Back to top -->
    <button
      id="back-to-top-en"
      aria-label="Back to top"
      class="fixed bottom-8 right-8 z-40 bg-[#008B9B] text-white p-3 rounded-full shadow-lg opacity-0 invisible transition-all duration-300 hover:bg-[#007a8a]"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 10l7-7m0 0l7 7m-7-7v18" />
      </svg>
    </button>

    <script>
      const btn = document.getElementById('back-to-top-en');
      window.addEventListener('scroll', () => {
        if (window.scrollY > 300) {
          btn?.classList.replace('opacity-0', 'opacity-100');
          btn?.classList.replace('invisible', 'visible');
        } else {
          btn?.classList.replace('opacity-100', 'opacity-0');
          btn?.classList.replace('visible', 'invisible');
        }
      });
      btn?.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    </script>
  </body>
</html>
